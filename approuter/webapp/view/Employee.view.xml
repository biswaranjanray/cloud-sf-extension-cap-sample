<mvc:View xmlns="sap.uxap" xmlns:f="sap.f" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.ui.demo.myapp.controller.Employee" xmlns:form="sap.ui.layout.form">
	<f:DynamicPage toggleHeaderOnTitleClick="false" showFooter="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<m:Title text="{projects>employeeName}" wrapping="true" class="sapUiTinyMarginEnd"/>
					</m:FlexBox>
				</f:heading>
				<f:navigationActions>
					<m:OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press=".handleFullScreen" tooltip="Enter Full Screen Mode"
						visible="{= ${/actionButtonsInfo/endColumn/fullScreen} !== null }"/>
					<m:OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press=".handleExitFullScreen" tooltip="Exit Full Screen Mode"
						visible="{= ${/actionButtonsInfo/endColumn/exitFullScreen} !== null }"/>
					<m:OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press=".handleClose" tooltip="Close column"
						visible="{= ${/actionButtonsInfo/endColumn/closeColumn} !== null }"/>
				</f:navigationActions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false">
				<sections>
					<ObjectPageSection title="Details">
						<subSections>
							<ObjectPageSubSection>
								<blocks>
									<form:SimpleForm id="SimpleFormDisplay" editable="false" layout="ResponsiveGridLayout" title="Employee" labelSpanXL="4" labelSpanL="4"
										labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2"
										columnsL="2" columnsM="1" singleContainerFullSize="false">
										<form:content>
											<m:Label text="Id"/>
											<m:Text text="{projects>employeeId}"/>
											<m:Label text="Name"/>
											<m:Text text="{projects>employeeName}"/>
											<m:Label text="Manager Id"/>
											<m:Text text="{projects>managerId}"/>
											<m:Label text="Manager Name"/>
											<m:Text text="{projects>managerName}"/>
										</form:content>
									</form:SimpleForm>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
					<ObjectPageSection title="Skills">
						<subSections>
							<ObjectPageSubSection>
								<blocks>
									<!-- <form:SimpleForm id="SimpleSkillDisplayForm" editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12"
										labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1"
										singleContainerFullSize="false">
										<form:content>
											<m:GenericTag text="Java" design="StatusIconHidden" status="Warning" class="sapUiSmallMarginBottom"></m:GenericTag>
											<m:GenericTag text="Javascript" design="StatusIconHidden" status="Warning" class="sapUiSmallMarginBottom"></m:GenericTag>
											<m:GenericTag text="UI" design="StatusIconHidden" status="Warning" class="sapUiSmallMarginBottom"></m:GenericTag>
										</form:content>
									</form:SimpleForm> -->

									<m:Table id="employeeSkillsTable" items="{path : 'empSkills>/d/ratedSkills/results'}">
										<m:columns>
											<m:Column/>
											
										</m:columns>
										<m:items>
											<m:ColumnListItem>
												<m:cells>
													<m:ObjectIdentifier text="{empSkills>skillNav/name_en_US}"/>
												</m:cells>
											</m:ColumnListItem>
										</m:items>
									</m:Table>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
					<ObjectPageSection title="Projects">
						<subSections>
							<ObjectPageSubSection>
								<blocks>
									<m:Table id="employeeProjectTable" items="{path : 'empProjects>/projects'}">
										<m:columns>
											<m:Column/>
											
										</m:columns>
										<m:items>
											<m:ColumnListItem>
												<m:cells>
													<m:ObjectIdentifier text="{empProjects>projectName}"/>
												</m:cells>
											</m:ColumnListItem>
										</m:items>
									</m:Table>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
				</sections>
			</ObjectPageLayout>
		</f:content>
		<f:footer>
			<m:OverflowToolbar id="otbFooter">
				<m:ToolbarSpacer/>
				<m:OverflowToolbarButton text="Link Project" type="Accept" icon="sap-icon://chain-link" press=".handleLinkProject"/>
			</m:OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>